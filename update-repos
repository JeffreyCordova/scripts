#!/bin/sh
#                    __      __                                       
#   __  ______  ____/ /___ _/ /____        ________  ____  ____  _____
#  / / / / __ \/ __  / __ `/ __/ _ \______/ ___/ _ \/ __ \/ __ \/ ___/
# / /_/ / /_/ / /_/ / /_/ / /_/  __/_____/ /  /  __/ /_/ / /_/ (__  ) 
# \__,_/ .___/\__,_/\__,_/\__/\___/     /_/   \___/ .___/\____/____/  
#     /_/                                        /_/                  

dir=$1

[ -z "$dir" ] && exit 1

for i in $(find . -name ".git" | cut -c 3-); do
    echo "";
    echo $i;

    cd "$i";
    cd ..;

    git pull origin master

    cd $dir
done

