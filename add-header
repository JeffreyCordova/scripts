#!/bin/sh
#              __    __      __                   __         
#   ____ _____/ /___/ /     / /_  ___  ____ _____/ /__  _____
#  / __ `/ __  / __  /_____/ __ \/ _ \/ __ `/ __  / _ \/ ___/
# / /_/ / /_/ / /_/ /_____/ / / /  __/ /_/ / /_/ /  __/ /    
# \__,_/\__,_/\__,_/     /_/ /_/\___/\__,_/\__,_/\___/_/     
#                                                            

file=$1
text=$2

[ -z "$file" ] && exit 1
[ -z "$text" ] && exit 1

figlet -f slant $text | cat - $file > temp && mv temp $file
sed -i '1,6s/^/# /' $file
sed -i '6G;' $file

